 @model NextNews.Models.Wheather
 
 <style>
    #weatherDetails {
        display: none;
        max-width: 400px;
        margin: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #fff;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        z-index: 1000;
    }

        #weatherDetails h2 {
            font-size: 18px;
            margin-bottom: 10px;
            color: blue; /* Set the text color to blue */
        }

        #weatherDetails p {
            margin: 5px 0;
            color: blue; /* Set the text color to blue */
        }

        #weatherDetails img {
            max-width: 100px;
            height: auto;
            margin-top: 10px;
        }
</style>
<div>
@* <img id="cloudIcon" src="@Model.icon.url" alt="Cloud Icon" style="cursor: pointer" /> *@
</div>
<div>
   
    <div id="weatherDetails">
       
        <h2>Weather Information</h2>
        <img src="@Model.icon.url" alt="Weather Icon" />
        <p>City: @Model.City</p>
        <p>Summary: @Model.Summary</p>
        <p>Temperature (Celsius): @Model.TemperatureCelsius</p>
        <p>Temperature (Fahrenheit): @Model.TemperatureFahrenheit</p>
        <p>Humidity: @Model.humidity</p>
        <p>Wind Speed: @Model.windSpeed</p>
        <p>Date: @Model.date</p>
        <p>Unix Time: @Model.unixTime</p>
      
      
    </div>
   
</div>


<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
<script>
    $(document).ready(function () {
        $("#cloudIcon").click(function () {
            $("#weatherDetails").show();
        });

        $(document).mousemove(function () {
            $("#weatherDetails").hide();
        });
    });
</script>
