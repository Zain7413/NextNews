
@{
    ViewData["Title"] = "Success";
}


<!-- Custom CSS for styling -->
<style>
    .success-page-container {
        max-width: 600px;
        margin: 2rem auto;
        padding: 2rem;
        background-color: #f9f9f9;
        border: 1px solid #e3e3e3;
        border-radius: 0.5rem;
    }

    .success-page-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .success-message {
        font-size: 1.25rem;
        text-align: center;
        margin-bottom: 2rem;
    }

    .btn-success-custom {
        background-color: #28a745;
        border-color: #28a745;
        padding: 0.5rem 1rem;
        font-size: 1rem;
        line-height: 1.5;
        border-radius: 0.3rem;
        color: #fff;
        text-transform: uppercase;
        font-weight: bold;
        text-align: center;
        display: block;
        width: 100%;
    }
</style>

<div class="success-page-container">
    <div class="success-page-header">
        <h1>Success!</h1>
    </div>
    <div class="success-message">
        <p>You have successfully subscribed to the plan.</p>
    </div>
    <div class="text-center">
        <!-- Example CTA, adjust href as needed -->
        <a href="/home" class="btn btn-success-custom">Go to Home</a>
    </div>
</div>

        