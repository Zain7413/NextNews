@model NextNews.Models.Database.User

@{
    ViewData["Title"] = "User Details";
}

<div class="container mt-5">
    <h2 class="mb-4">User Details</h2>

    <dl class="row">
        <dt class="col-sm-3 text-muted">First Name:</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>

        <dt class="col-sm-3 text-muted">Last Name:</dt>
        <dd class="col-sm-9">@Model.LastName</dd>

        <dt class="col-sm-3 text-muted">Date of Birth:</dt>
        <dd class="col-sm-9">@Model.DateofBirth</dd>

        <dt class="col-sm-3 text-muted">Username:</dt>
        <dd class="col-sm-9">@Model.UserName</dd>

        <dt class="col-sm-3 text-muted">Phone Number:</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>
    </dl>
</div>

<div class="container mt-5">
    <h2>Assign Role</h2>
    <form method="post" action="@Url.Action("AssignRole", "User")">
        <input type="hidden" name="userId" value="@Model.Id" width="50" height="100" />
        <div class="form-group row">
            <label for="roles" class="col-sm-3 col-form-label">Select Role:</label>
            <div class="col-sm-9">
                <select class="form-control" name="role" id="roles">
                    <option value="Admin">Admin</option>
                    <option value="Editor">Editor</option>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <button type="submit" class="btn btn-primary">Assign Role</button>
            </div>
        </div>
    </form>
</div>
